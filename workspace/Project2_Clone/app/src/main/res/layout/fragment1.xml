<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/frag1_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="글자입니다."
        android:textSize="30dp"
        android:background="#494949"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#112299"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="애니메이션 시작"
            android:backgroundTint="#112234"
            android:id="@+id/frag_btn1"/>
        <ImageView
            android:id="@+id/frag1_imgv1"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/and"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#112299"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="애니메이션 시작"
            android:backgroundTint="#112234"
            android:id="@+id/frag_btn2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/frag1_imgv2"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp"
                android:src="@drawable/and"/>
            <ImageView
                android:id="@+id/frag1_imgv3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/and"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="애니메이션 시작"
        android:backgroundTint="#112234"
        android:id="@+id/frag_btn3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#131313"
        android:layout_weight="1"/>
</LinearLayout>