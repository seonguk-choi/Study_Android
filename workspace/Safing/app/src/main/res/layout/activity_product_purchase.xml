<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Product_Purchase_Activity"
    android:background="#F9F9FB"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9FB">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9FB">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#F9F9FB"
                app:titleTextColor="#735340"
                app:popupTheme="@style/Widget.AppCompat.Toolbar"
                android:id="@+id/product_purchase_toolbar">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Shop"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#735340"
                    android:textSize="20dp"
                    android:layout_marginRight="70dp"
                    android:fontFamily="@font/nanumgothic"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="결제하기"
                android:textSize="25dp"
                android:textColor="#F9F9FB"
                android:textAlignment="center"
                android:background="#85897B"
                android:layout_marginVertical="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="9">
                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/product_cart_swipe">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:text="배송지"
                                android:textSize="20dp"
                                android:paddingLeft="10dp"
                                android:layout_marginHorizontal="20dp"
                                style="@style/text_purchase1"
                                android:layout_marginVertical="5dp"/>
                            <com.google.android.material.tabs.TabLayout
                                android:layout_marginTop="10dp"
                                android:id="@+id/product_purchase_tab1"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                app:tabTextColor="#85897B"
                                app:tabIndicatorHeight="0dp"
                                app:tabGravity="fill"
                                app:tabBackground="@drawable/tab_background4"
                                app:tabSelectedTextColor="#F9F9FB"
                                app:tabRippleColor="@android:color/transparent"
                                android:layout_marginHorizontal="20dp"/>
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:id="@+id/product_purchase_container"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:text="주문자"
                                android:textSize="20dp"
                                android:paddingLeft="10dp"
                                android:layout_marginHorizontal="20dp"
                                style="@style/text_purchase1"
                                android:layout_marginVertical="5dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="10dp"
                                android:gravity="center">
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:text="주문상품"
                                android:textSize="20dp"
                                android:paddingLeft="10dp"
                                android:layout_marginHorizontal="20dp"
                                style="@style/text_purchase1"
                                android:layout_marginVertical="5dp"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/product_purchase_rec1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="30dp"
                                android:layout_marginHorizontal="20dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:text="결제수단"
                                android:textSize="20dp"
                                android:paddingLeft="10dp"
                                android:layout_marginHorizontal="20dp"
                                style="@style/text_purchase1"
                                android:layout_marginVertical="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginVertical="10dp"
                            android:gravity="center">

                        </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:text="결제 동의"
                                android:textSize="20dp"
                                android:paddingLeft="10dp"
                                android:layout_marginHorizontal="20dp"
                                style="@style/text_purchase1"
                                android:layout_marginVertical="5dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginVertical="10dp"
                                android:gravity="center">
                                <CheckBox
                                    android:id="@+id/product_purchase_box1"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="40dp"
                                    android:buttonTint="#735340"
                                    android:fontFamily="@font/nanumgothic"
                                    android:scaleX="1.3"
                                    android:scaleY="1.3"
                                    android:textSize="15dp"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="5dp"
                                    android:textSize="15dp"
                                    android:text="결제 내여을 확인 하였으며 동의합니다."
                                    android:textColor="#000000"
                                    android:fontFamily="@font/nanumgothic"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginVertical="5dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingVertical="30dp"
                                android:paddingHorizontal="20dp"
                                android:weightSum="3">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:text="총 상품금액"
                                        android:gravity="center_vertical"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/ibmplexsanslight"/>
                                    <TextView
                                        android:id="@+id/product_purchase_tv1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:text="0원"
                                        android:gravity="center_vertical|end"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/ibmplexsanslight"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="20dp">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:text="배송비"
                                        android:gravity="center_vertical"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/ibmplexsanslight"/>
                                    <TextView
                                        android:id="@+id/product_purchase_tv2"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:text="0원"
                                        android:gravity="center_vertical|end"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/ibmplexsanslight"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:text="총 주문금액"
                                        android:textStyle="bold"
                                        android:textSize="20dp"
                                        android:gravity="center_vertical"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/ibmplexsanslight"/>
                                    <TextView
                                        android:id="@+id/product_purchase_tv3"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:text="0원"
                                        android:gravity="center_vertical|end"
                                        android:textStyle="bold"
                                        android:textSize="20dp"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/ibmplexsanslight"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/product_purchase_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="결제하기"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/nanumgothic"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="#735340"
                    android:layout_alignParentBottom="true"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.drawerlayout.widget.DrawerLayout>