<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    tools:context=".shop.activity.Purchase_Result_Activity"
    android:orientation="vertical"
    android:background="#F9F9FB">
    <TextView
        android:id="@+id/purchase_result_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="결제완료 되었습니다.\n\n감사합니다."
        android:textColor="#000000"
        android:gravity="center"
        android:fontFamily="@font/nanumgothic"
        android:layout_marginVertical="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="50dp"
        android:weightSum="2">
        <Button
            android:id="@+id/purchase_result_btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:text="구매내역"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#735340"/>
        <Button
            android:id="@+id/purchase_result_btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:text="홈으로"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#85897B"/>
    </LinearLayout>
</LinearLayout>