<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shop.fragment.Product_Cart_Fragment"
    android:background="#F9F9FB"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9FB">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9FB">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#F9F9FB"
                app:titleTextColor="#735340"
                app:popupTheme="@style/Widget.AppCompat.Toolbar"
                android:id="@+id/product_cart_toolbar">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Shop"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#735340"
                    android:textSize="20dp"
                    android:layout_marginRight="70dp"
                    android:fontFamily="@font/nanumgothic"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="장바구니"
                android:textSize="20dp"
                android:paddingVertical="5dp"
                android:textColor="#F9F9FB"
                android:textAlignment="center"
                android:background="#85897B"
                android:layout_marginVertical="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="9">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/product_cart_rec1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="30dp"
                                android:layout_marginHorizontal="20dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_round5"
                                android:orientation="horizontal"
                                android:paddingVertical="20dp"
                                android:weightSum="2">
                                <CheckBox
                                    android:id="@+id/product_cart_box1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="전체선택"
                                    android:layout_marginLeft="40dp"
                                    android:buttonTint="#735340"
                                    android:fontFamily="@font/nanumgothic"
                                    android:scaleX="1.3"
                                    android:scaleY="1.3"
                                    android:textSize="15dp"
                                    />
                                <Button
                                    android:id="@+id/product_cart_btn1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="100dp"
                                    android:layout_marginRight="20dp"
                                    android:text="선택삭제"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/nanumgothic"
                                    android:textColor="#F9F9FB"
                                    android:gravity="center"
                                    android:backgroundTint="#735340"
                                    android:drawableLeft="@drawable/button_left_image_cancel1"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="20dp"
                                android:weightSum="3">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="총 상품금액"
                                        android:gravity="center_vertical"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/ibmplexsanslight"/>
                                    <TextView
                                        android:id="@+id/product_cart_tv1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="0원"
                                        android:gravity="center_vertical|end"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/ibmplexsanslight"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="20dp">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="배송비"
                                        android:gravity="center_vertical"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/ibmplexsanslight"/>
                                    <TextView
                                        android:id="@+id/product_cart_tv2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="0원"
                                        android:gravity="center_vertical|end"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/ibmplexsanslight"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:text="총 주문금액"
                                        android:textStyle="bold"
                                        android:textSize="20dp"
                                        android:gravity="center_vertical"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/ibmplexsanslight"/>
                                    <TextView
                                        android:id="@+id/product_cart_tv3"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:text="0원"
                                        android:gravity="center_vertical|end"
                                        android:textStyle="bold"
                                        android:textSize="20dp"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/ibmplexsanslight"/>
                                </LinearLayout>
                        </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp">
                <Button
                    android:id="@+id/product_cart_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="구매하기"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/nanumgothic"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="#735340"
                    android:layout_alignParentBottom="true"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/product_cart_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header_shop"
        app:menu="@menu/header_menu_shop"
        />
</androidx.drawerlayout.widget.DrawerLayout>