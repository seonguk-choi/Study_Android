<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shop.fragment.Product_PurchaseHistory_Fragment"
    android:background="#F9F9FB"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9FB">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9FB">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#F9F9FB"
                app:titleTextColor="#735340"
                app:popupTheme="@style/Widget.AppCompat.Toolbar"
                android:id="@+id/product_purchaseHistory_toolbar">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Shop"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#735340"
                    android:textSize="20dp"
                    android:layout_marginRight="70dp"
                    android:fontFamily="@font/nanumgothic"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="구매내역"
                    android:textSize="20dp"
                    android:paddingVertical="5dp"
                    android:textColor="#F9F9FB"
                    android:textAlignment="center"
                    android:background="#85897B"
                    android:layout_marginVertical="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/product_purchaseHistory_rec1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="30dp"
                                android:layout_marginHorizontal="20dp"/>
                        </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/product_purchaseHistory_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header_shop"
        app:menu="@menu/header_menu_shop"
        />
</androidx.drawerlayout.widget.DrawerLayout>