<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shop.fragment.Review_Fragment"
    android:background="#F9F9FB"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9FB">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9FB">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#F9F9FB"
                app:titleTextColor="#735340"
                app:popupTheme="@style/Widget.AppCompat.Toolbar"
                android:id="@+id/review_toolbar">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Shop"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#735340"
                    android:textSize="20dp"
                    android:layout_marginRight="70dp"
                    android:fontFamily="@font/nanumgothic"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="리뷰쓰기"
                    android:textSize="25dp"
                    android:textColor="#F9F9FB"
                    android:textAlignment="center"
                    android:background="#85897B">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp">
                        <ImageView
                            android:id="@+id/review_img"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/package2"
                            android:scaleType="fitXY"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="5"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/review_tv1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:text="상품이름"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:fontFamily="@font/nanumgothic"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="상품금액"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                android:fontFamily="@font/nanumgothic"/>
                            <TextView
                                android:id="@+id/review_tv2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="0원"
                                android:gravity="center_vertical|end"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:fontFamily="@font/nanumgothic"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="배송비"
                                android:gravity="center_vertical"
                                android:textColor="#8C8C8C"
                                android:fontFamily="@font/nanumgothic"/>
                            <TextView
                                android:id="@+id/review_tv3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="무료"
                                android:gravity="center_vertical|end"
                                android:textColor="#8C8C8C"
                                android:fontFamily="@font/nanumgothic"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="배송상태"
                                android:gravity="center_vertical"
                                android:textColor="#8C8C8C"
                                android:fontFamily="@font/nanumgothic"/>
                            <TextView
                                android:id="@+id/review_tv4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="무료"
                                android:gravity="center_vertical|end"
                                android:textColor="#8C8C8C"
                                android:fontFamily="@font/nanumgothic"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background=" #735340"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="상품이 어떠셨나요?"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp">
                </TextView>
                <RatingBar
                    android:id="@+id/review_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:rating="5"
                    android:stepSize="1"
                    android:numStars="5"
                    android:isIndicator="false"
                    android:layout_margin="10dp"
                    android:theme="@style/RatingBar">
                </RatingBar>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사용 후기를 남겨주세요!"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/review_etv"
                    android:layout_width="360dp"
                    android:layout_height="100dp"
                    android:hint="10자 이상 작성해주세요"
                    android:background="@drawable/button_round8"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:padding="5dp"
                    android:layout_marginVertical="20dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사진을 올려주세요!"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                <LinearLayout
                    android:id="@+id/review_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:background="#F9F9FB">
                    <ImageView
                        android:id="@+id/review_imgbtn1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:scaleType="center"
                        android:background="@drawable/button_round8"
                        android:src="@android:drawable/ic_menu_gallery"
                      />
                    <ImageView
                        android:id="@+id/review_imgbtn2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:scaleType="center"
                        android:background="@drawable/button_round8"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/review_imgbtn3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:scaleType="center"
                        android:background="@drawable/button_round8"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/review_imgbtn4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:scaleType="center"
                        android:background="@drawable/button_round8"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:visibility="invisible"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/review_btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="취소"
                        android:textStyle="bold"
                        android:textColor="#F9F9FB"
                        android:backgroundTint="#85897B"
                        android:layout_margin="10dp"/>
                    <Button
                        android:id="@+id/review_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="등록"
                        android:textStyle="bold"
                        android:textColor="#F9F9FB"
                        android:backgroundTint="#735340"
                        android:layout_margin="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/review_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header_shop"
        app:menu="@menu/header_menu_shop"/>
</androidx.drawerlayout.widget.DrawerLayout>