<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_round1"
    android:orientation="vertical"
    android:id="@+id/item_address_repository_linear"
    android:layout_marginVertical="5dp"
    android:paddingVertical="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <CheckBox
            android:id="@+id/item_address_repository_box"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:buttonTint="#735340"
            android:scaleX="1.2"
            android:scaleY="1.2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/item_address_repository_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="우편번호"
                android:textColor="#000000"
                android:fontFamily="@font/ibmplexsanslight"/>
            <TextView
                android:id="@+id/item_address_repository_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기본주소"
                android:textColor="#000000"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/ibmplexsanslight"/>
            <TextView
                android:id="@+id/item_address_repository_tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="상세주소"
                android:textColor="#000000"
                android:fontFamily="@font/ibmplexsanslight"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/item_address_repository_btn1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cancel1"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_round1"/>
    </LinearLayout>
</LinearLayout>