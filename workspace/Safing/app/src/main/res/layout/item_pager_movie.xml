<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_pager1_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9">
                    <ImageButton
                        android:id="@id/exo_play"
                        style="@style/ExoMediaButton.Play"
                        android:layout_gravity="center"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="20dp"
                        android:background="#32000000" />

                    <ImageButton
                        android:id="@id/exo_pause"
                        style="@style/ExoMediaButton.Pause"
                        android:layout_gravity="center"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="20dp"
                        android:background="#32000000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/movie_pager_volume"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:src="@drawable/speaker"
                        android:layout_marginVertical="10dp"/>
                    <ImageView
                        android:id="@+id/movie_pager_comment"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:src="@drawable/reply"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/movie_pager_comment_cnt"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:gravity="center"/>
                    <ImageView
                        android:id="@+id/movie_pager_like"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:src="@drawable/heart1"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/movie_pager_like_cnt"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:gravity="center"/>
                    <ImageView
                        android:id="@+id/movie_pager_share"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:src="@drawable/share"
                        android:layout_marginVertical="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingBottom="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/movie_pager_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:fontFamily="@font/nanumgothic"
                        android:gravity="center_vertical"
                        android:text="\@Y_Watersports"/>
                    <TextView
                        android:id="@+id/movie_pager_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:fontFamily="@font/nanumgothic"
                        android:gravity="right"
                        android:text="\@Y_Watersports"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/movie_pager_tag"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:fontFamily="@font/nanumgothic"
                    android:gravity="center_vertical"
                    android:text="#패들영상"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>