<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/button_round4"
    android:layout_marginVertical="20dp"
    android:paddingVertical="20dp">
    <ImageView
        android:id="@+id/item_product_detail_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/camimg2"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="4">
        <TextView
            android:id="@+id/item_product_detail_tv1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="검색상품 태그"
            android:textSize="15dp"
            android:gravity="end"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="@font/ibmplexsanslight"/>
        <TextView
            android:id="@+id/item_product_detail_tv2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="0원"
            android:textSize="15dp"
            android:gravity="end"
            android:textColor="#000000"
            android:fontFamily="@font/ibmplexsanslight"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="end">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/minus1"
                android:scaleType="fitCenter"
                android:background="@drawable/button_round1"/>
            <TextView
                android:id="@+id/item_product_detail_tv3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="0"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/ibmplexsanslight"/>
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/plus1"
                android:scaleType="fitCenter"
                android:background="@drawable/button_round1"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>