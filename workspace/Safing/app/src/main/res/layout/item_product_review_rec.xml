<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/button_round4"
    android:layout_marginVertical="20dp"
    android:paddingBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_product_review_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/profile"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/item_product_review_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginRight="10dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="1"

                    android:theme="@style/RatingBar" />

                <TextView
                    android:id="@+id/item_product_review_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanumgothic"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_product_review_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:layout_gravity="center"
                    android:text="아이디"
                    android:textColor="#8C8C8C"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/nanumgothic"/>
                <TextView
                    android:id="@+id/item_product_review_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="작성일자"
                    android:textColor="#8C8C8C"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/nanumgothic"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/item_product_review_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginVertical="10dp"
        android:text="리뷰내용 \n리뷰내용 \n리뷰내용 \n리뷰내용 \n리뷰내용 \n리뷰내용 \n리뷰내용"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="@font/nanumgothic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginLeft="60dp">
        <ImageView
            android:id="@+id/item_product_review_img1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/camimg2"
            android:scaleType="fitXY"
            android:layout_marginRight="3dp"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/item_product_review_img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/camimg2"
                android:scaleType="fitXY"
                android:layout_marginLeft="3dp"/>
            <TextView
                android:id="@+id/item_product_review_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+1"
                android:textSize="60dp"
                android:textStyle="bold"
                android:fontFamily="@font/nanumgothic"
                android:textColor="#735340"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginVertical="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:layout_gravity="center"
            android:text="리뷰가 도움이 되었나요?"
            android:textColor="#8C8C8C"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/nanumgothic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/item_product_review_btn"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:paddingHorizontal="10dp"
                android:text="10"
                android:textColor="#8C8C8C"
                android:background="@drawable/button_round2"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>