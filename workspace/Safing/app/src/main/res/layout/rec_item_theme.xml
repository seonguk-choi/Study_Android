<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rec_item_theme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="5dp"
    android:layout_margin="15dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        >
        <LinearLayout
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/theme_rec_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가족과 함께하기 좋은 노지 캠핑장"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:fontFamily="@font/ibmplexsanslight"/>
                <ImageView
                    android:id="@+id/theme_rec_imgv1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/bookmark3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:id="@+id/theme_rec_imgv2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/spot"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/theme_rec_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="광주광역시 서구 농성동"
                    android:textSize="10dp"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/theme_rec_imgv3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fire1"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/theme_rec_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#Safing #안전 #가족"
                    android:textSize="10dp"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginVertical="10dp">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:id="@+id/theme_rec_imgv4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/camimg4"
                        android:scaleType="fitXY" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="4dp">
                        <TextView
                            android:id="@+id/theme_rec_tv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="여행액티비티"
                            android:textSize="10dp"
                            android:textColor="#ffffff"
                            android:paddingHorizontal="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/text_round1"/>
                        <TextView
                            android:id="@+id/theme_rec_tv5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="백패킹,하이킹"
                            android:textSize="10dp"
                            android:textColor="#ffffff"
                            android:paddingHorizontal="5dp"
                            android:background="@drawable/text_round1"/>
                    </LinearLayout>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/theme_rec_imgv5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/package1"
                        android:scaleType="fitXY"
                        android:layout_marginBottom="2dp"/>
                    <ImageView
                        android:id="@+id/theme_rec_imgv6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/package2"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/theme_rec_tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이들이 자연과 함께하고 뛰어 놀 수 있는, 안전하게 캠핑을 즐길 수 있는 "
                android:textSize="10dp"
                android:textColor="#000000" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>