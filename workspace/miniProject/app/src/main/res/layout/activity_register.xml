<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="#F9F9FB"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/register"
        android:layout_marginVertical="50dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="20dp"
        android:fontFamily="@font/nanumsquareround"
        android:textColor="#FF151515"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"/>
    <EditText
        android:id="@+id/register_edt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디를 입력하세요."
        android:textColorHint="#FF808080"
        android:inputType="text"
        android:layout_marginHorizontal="50dp"
        android:textColor="#FF151515"
        android:backgroundTint = "#FF808080"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="20dp"
        android:fontFamily="@font/nanumsquareround"
        android:textColor="#FF151515"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"/>
    <EditText
        android:id="@+id/register_edt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력하세요."
        android:textColorHint="#FF808080"
        android:inputType="textPassword"
        android:layout_marginHorizontal="50dp"
        android:textColor="#FF151515"
        android:backgroundTint = "#FF808080"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="20dp"
        android:fontFamily="@font/nanumsquareround"
        android:textColor="#FF151515"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"/>
    <EditText
        android:id="@+id/register_edt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름을 입력하세요."
        android:textColorHint="#FF808080"
        android:inputType="text"
        android:layout_marginHorizontal="50dp"
        android:textColor="#FF151515"
        android:backgroundTint = "#FF808080"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:textSize="20dp"
        android:fontFamily="@font/nanumsquareround"
        android:textColor="#FF151515"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"/>
    <EditText
        android:id="@+id/register_edt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="6자리로 입력하세요."
        android:textColorHint="#FF808080"
        android:inputType="number"
        android:layout_marginHorizontal="50dp"
        android:textColor="#FF151515"
        android:backgroundTint = "#FF808080"/>

    <Button
        android:id="@+id/register_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#F9F9FB"
        android:background="#735340"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="40dp"/>
    <Button
        android:id="@+id/register_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:textColor="#F9F9FB"
        android:background="#FF808080"
        android:layout_marginHorizontal="150dp"/>
</LinearLayout>